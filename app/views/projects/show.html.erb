<div id="dashboard" data-project-id="<%= @project.id %>" class="row-fluid">
  <%= render :partial => 'projects/project_nav', :locals => {:project => @project} %>
  <div class="task-content-wrapper">
    <div class="backlog task-category">
      <div class="title"> Backlog</div>
      <div class="task-content" data-task-status="1">
        <% @project.tasks.backlog.each do |task| %>
            <%= render :partial => 'tasks/task_item', :locals => {:task => task} %>
        <% end %>
      </div>
    </div>

    <div class="project-sprint task-category">
      <div class="title"> To Do</div>
      <div class="task-content" data-task-status="2">
        <% @project.tasks.todo.each do |task| %>
            <%= render :partial => 'tasks/task_item', :locals => {:task => task} %>
        <% end %>
      </div>
    </div>

    <div class="project-doing task-category">
      <div class="title"> Doing</div>
      <div class="task-content" data-task-status="3">
        <% @project.tasks.doing.each do |task| %>
            <%= render :partial => 'tasks/task_item', :locals => {:task => task} %>
        <% end %>
      </div>
    </div>

    <div class="project-finish task-category">
      <div class="title"> Finish</div>
      <div class="task-content" data-task-status="4">
        <% @project.tasks.finish.each do |task| %>
            <%= render :partial => 'tasks/task_item', :locals => {:task => task} %>
        <% end %>
      </div>
    </div>

    <div class="project-done task-category">
      <div class="title"> Done</div>
      <div class="task-content" data-task-status="5">
        <% @project.tasks.done.each do |task| %>
            <%= render :partial => 'tasks/task_item', :locals => {:task => task} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class='modal fade bs-example-modal-sm' id='statistics' tabindex='-1' role='dialog' aria-labelledby='mySmallModalLabel' aria-hidden='true'>
  <div class='modal-dialog modal-sm'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
        <h4 class='modal-title'> Project Statistics </h4>
      </div>
      <div class='modal-body'>
        <div style="width: 50%">
          <canvas id="statistics-canvas" height="450" width="600"></canvas>
        </div>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-default' data-dismiss='modal'>Close</button>
        <button type='button' id='btnSave' class='btn btn-primary'>Save</button>
      </div>
    </div>
  </div>
</div>

